@model List<WebApp.DbHandler.Models.Module>

@{ ViewData["Title"] = "Kursbehandler"; }

<div class="breadcrumbs">
	<div class="wrapper">
		<ul class="breadcrumb-nav">
			<li><a asp-controller="Admin" asp-action="Index">Kontrollpanel</a></li>
			<li><a asp-controller="Admin" asp-action="ViewCourses">Kursbehandler</a></li>
			<li>@ViewBag.CourseName</li>
		</ul>
	</div>
</div>

<div class="kurs_info">
	<h1>@ViewBag.CourseName</h1><br />
	<p>Denne siden er kun for Kodesonens administratorer.</p>
</div>

<a asp-action="EditModule" asp-controller="Admin" asp-route-kurs="@ViewBag.CourseId" asp-route-modul="69420" class="add_course_select">
	<div class="course_select_info">
		<h2 style="color: white;"><i class="fas fa-plus-circle" style="padding-right: 6px;"></i> Legg til ny modul</h2>
	</div>
</a>
@* ENDRE KURS *@

<a asp-action="NewCourse" asp-route-kurs="@ViewBag.CourseId" class="add_course_select" id="kodesonen-button">
	<div class="course_select_info">
		<h2 style="color: white;" ><i class="fas fa-edit" style="padding-right: 6px;"></i> Endre kurs @ViewBag.CourseId</h2>
	</div>
</a>

<div class="course_jump_break">
	<h3>Alle moduler:</h3>
</div>

@foreach (var Module in Model) {
	<a asp-controller="Admin" asp-action="EditModule" asp-route-kurs="@Module.CourseId" asp-route-modul="@Module.Id" class="course_select">
		<div class='course_select_info'>
			<h2>@Module.Chapter.@Module.SubChapter - @Module.ModuleName</h2>
		</div>

		<div class='course_select_symbol'>
			<h2><i class='fas fa-edit'></i></h2>
		</div>
	</a>
}