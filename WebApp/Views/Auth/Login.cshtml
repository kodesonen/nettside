	<div class="medlem-section wrapper">
		<div class="validators">
			<div asp-validation-summary="All"></div>
		</div>
		<div class="medlem-form">
			<form asp-action="Login" method="post">

				<h1>Logg inn</h1><hr />

				<label><b>E-post:</b></label>
				<input type="text" placeholder="Oppgi e-post adresse" asp-for="Email" required>

				<label><b>Passord:</b></label>
				<input type="password" placeholder="Oppgi passord" asp-for="Password" required>

				<hr />
				<button class="medlem-button add_course_select">Logg inn</button>
			</form>
		</div>

		<div class="info-box">
			<div class="info-details">
				<h1>Ingen bruker?</h1><br />
				<p>Ved å <a asp-controller="Auth" asp-action="Register">opprette medlemskap</a> vil du automatisk bli tildelt en bruker.</p>
			</div>
		</div>
	</div>

